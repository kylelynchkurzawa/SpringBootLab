pipeline {
    agent {
        label "ubuntu"
    }
    tools {
        maven 'Maven 3.3.9'
        jdk 'java 8 - 181'
    }
    stages {
        stage ('Initialize') {
            steps {
                bat '''
                    echo "PATH = %PATH%"
                    echo "M2_HOME = %M2_HOME%"
                '''
            }
        }

        stage ('Build') {
            steps {
                    bat 'mvn install'
            }
             post {
                success {
                    junit '/target/surefire-reports/*.xml'
                        }
                 }
               

           
            }
        }
    
}
